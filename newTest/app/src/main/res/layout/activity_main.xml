<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000"
    tools:context="com.example.yls.newtest.MainActivity">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <!--第1部分：内容布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical">
        
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:title="新闻实训版" >

        </android.support.v7.widget.Toolbar>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v4.view.ViewPager>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"/>

        <!--界面底部的选项卡-->
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp"
            >

            <RadioButton
                android:id="@+id/rb_01"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_home_tab_01"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="新闻"
                android:textColor="@drawable/selector_home_tab"
                android:textSize="12sp"
                />

            <RadioButton
                android:id="@+id/rb_02"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_home_tab_02"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="视听"
                android:textColor="@drawable/selector_home_tab"
                android:textSize="12sp"
                />
            <RadioButton
                android:id="@+id/rb_03"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_home_tab_03"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="阅读"
                android:textColor="@drawable/selector_home_tab"
                android:textSize="12sp"
                />
            <RadioButton
                android:id="@+id/rb_04"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_home_tab_04"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="发现"
                android:textColor="@drawable/selector_home_tab"
                android:textSize="12sp"
                />
            <RadioButton
                android:id="@+id/rb_05"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_home_tab_05"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="设置"
                android:textColor="@drawable/selector_home_tab"
                android:textSize="12sp"
                />
        </RadioGroup>
    </LinearLayout>

        <!--第2部分：侧滑菜单
             添加如下属性让侧滑菜单显示在左边：
             android:layout_gravity="left"
         -->
        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            app:headerLayout="@layout/navigation_view_header"
            app:menu="@menu/main"
            />

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
